#include <stdio.h>
void main() {
    int a,b;
    printf("Enter a number:");
    scanf("%d",&a);
    printf("Enter another number:");
    scanf("%d",&b);
    int big=a>b?a:b;
    int step=big;
    while(1)
    {
        if(big%a==0 && big%b==0)
        {
            printf("The LCM is %d",big);
            break;
        }
        else
        {
            big=big+step;
        }
    }
}
